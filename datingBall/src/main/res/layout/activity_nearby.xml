<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_top_bar_nearby"
        layout="@layout/title_bar_nearby" />

    <com.anthony.ultimateswipetool.cards.SwipeCards
        android:id="@+id/swipe_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_top_bar_nearby"
        android:padding="@dimen/padding_swipestack"
        app:stack_rotation="10"
        app:stack_size="3" />

    <Button
        android:id="@+id/buttonSwipeLeft"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/swipe_left"/>

    <Button
        android:id="@+id/buttonSwipeRight"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/swipe_right"/>
</RelativeLayout>
